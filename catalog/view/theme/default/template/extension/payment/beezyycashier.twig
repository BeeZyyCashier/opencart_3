{% if bz_error %}
<h4 style="color: red" class="pull-right">{{ bz_error }}</h4>
{% else %}
  {% if iframe %}
    <iframe src="{{ action }}" width="{{ iframe_w }}" height="{{ iframe_h }}" style="border: 0"></iframe>
  {% else %}
<form action="{{ action }}" method="{{ method }}">
  <div class="buttons">
    <div class="pull-right">
      {% for key, value in fields %}
        <input type="hidden" name="{{ key }}" value="{{ value }}">
      {% endfor %}
      <input type="submit" value="{{ button_confirm }}" class="btn btn-primary" />
    </div>
  </div>
</form>
  {% endif %}
{% endif %}